<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<body>

	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
	<% end %>

	<% if flash[:alert] %>
		<h3 id="alert"><%= flash[:alert] %></h3>
	<% end %>

<%= yield %>

</body>
</html>
